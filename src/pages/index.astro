---
import "../styles/global.css";
import Layout from "../layouts/Layout.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Experience from "../components/Experience.astro";
import WorkIcon from "../icons/Work.astro";
import CodeIcon from "../icons/Code.astro";
import Projects from "../components/Projects.astro";
import Hero from "../components/Hero.astro";
import TitleSection from "../components/TitleSection.astro";
import ProfileCheck from "../icons/ProfileCheck.astro";
import AboutMe from "../components/AboutMe.astro";

---

<Layout
  title="Portafolio de Josué Hernández - Desarrollador y Programador Web"
  description="Estudiante universitario, desarrollador web fullstack Jr. y analista de seguridad."
>
  <main class="px-4">
    <SectionContainer class="py-16 md:py-36">
      <Hero>
        <slot />
      </Hero>
    </SectionContainer>

    <SectionContainer id="experiencia" class="pb-12">
      <TitleSection>
        <WorkIcon class="size-8" />
        Experiencia Laboral
      </TitleSection>
      <Experience />
    </SectionContainer>

    <SectionContainer id="proyectos" class="pb-32">
      <TitleSection>
        <CodeIcon class="size-8" />
        Proyectos
      </TitleSection>
      <Projects />
    </SectionContainer>

    <SectionContainer id="sobre-mi">
      <TitleSection>
        <ProfileCheck class="size-8" />
        Sobre mí
      </TitleSection>
      <AboutMe />
    </SectionContainer>

  </main>
</Layout>
